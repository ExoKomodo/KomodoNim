{
  "devDependencies": {
    "npm-watch": "^0.9.0"
  },
  "scripts": {
    "build": "nimble build",
    "start": "nimble run",
    "watch": "npm run build & node_modules/.bin/npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "nim"
      ],
      "delay": 500,
      "runOnChangeOnly": true
    }
  }
}
